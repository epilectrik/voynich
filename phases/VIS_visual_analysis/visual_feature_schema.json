            "values": [
              "NONE",
              "1",
              "2_5",
              "6_15",
              "16_PLUS"
            ],
            "coding_rule": "Count distinct human figures"
          },
          "figure_arrangement": {
            "type": "categorical",
            "values": [
              "LINEAR",
              "CIRCULAR",
              "SCATTERED",
              "CLUSTERED",
              "PAIRED"
            ],
            "coding_rules": {
              "LINEAR": "Figures in line/row",
              "CIRCULAR": "Figures in circular arrangement",
              "SCATTERED": "No clear arrangement",
              "CLUSTERED": "Grouped together",
              "PAIRED": "In pairs"
            }
          },
          "figure_pose": {
            "type": "categorical",
            "values": [
              "STANDING",
              "SEATED",
              "RECLINING",
              "BATHING",
              "MIXED"
            ],
            "coding_rule": "Predominant pose of figures"
          },
          "figure_connectivity": {
            "type": "binary",
            "values": [
              "YES",
              "NO"
            ],
            "coding_rule": "YES if figures connected by lines/tubes"
          }
        }
      },
      "containers": {
        "description": "Container/pool features",
        "features": {
          "pool_present": {
            "type": "binary",
            "values": [
              "YES",
              "NO"
            ],
            "coding_rule": "YES if pool/tub visible"
          },
          "pool_count": {
            "type": "categorical",
            "values": [
              "NONE",
              "1",
              "2_3",
              "4_PLUS"
            ],
            "coding_rule": "Count distinct pools"
          },
          "pool_shape": {
            "type": "categorical",
            "values": [
              "ROUND",
              "OVAL",
              "RECTANGULAR",
              "IRREGULAR"
            ],
            "coding_rule": "Predominant pool shape"
          },
          "pipe_present": {
            "type": "binary",
            "values": [
              "YES",
              "NO"
            ],
            "coding_rule": "YES if pipes/tubes visible"
          },
          "pipe_network": {
            "type": "categorical",
            "values": [
              "NONE",
