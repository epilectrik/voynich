            }
          }
        }
      },
      "overall": {
        "description": "Overall page characteristics",
        "features": {
          "layout_type": {
            "type": "categorical",
            "values": [
              "SINGLE_SCENE",
              "MULTI_PANEL",
              "CONTINUOUS",
              "SCHEMATIC"
            ],
            "coding_rule": "Overall page organization"
          },
          "text_presence": {
            "type": "categorical",
            "values": [
              "NONE",
              "MINIMAL",
              "MODERATE",
              "EXTENSIVE"
            ],
            "coding_rule": "Amount of text relative to illustration"
          }
        }
      }
    },
    "zodiac_features": {
